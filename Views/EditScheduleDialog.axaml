<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SnapVault.Views.EditScheduleDialog"
        Title="Change schedule"
        Width="420" Height="280"
        WindowStartupLocation="CenterOwner"
        Background="#0F1419">
  <StackPanel Margin="24" Spacing="16">
    <TextBlock Text="Full backup interval" FontWeight="SemiBold" Foreground="#F0F2F5"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock Text="Run a full backup every " Foreground="#F0F2F5" VerticalAlignment="Center"/>
      <ComboBox x:Name="FullBackupDays" Width="80" SelectedIndex="2">
        <ComboBoxItem Content="1"/>
        <ComboBoxItem Content="3"/>
        <ComboBoxItem Content="7"/>
        <ComboBoxItem Content="14"/>
        <ComboBoxItem Content="30"/>
      </ComboBox>
      <TextBlock Text=" days" Foreground="#F0F2F5" VerticalAlignment="Center"/>
    </StackPanel>
    <TextBlock Text="Incremental backup" FontWeight="SemiBold" Foreground="#F0F2F5" Margin="0,8,0,0"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock Text="Run an incremental backup every " Foreground="#F0F2F5" VerticalAlignment="Center"/>
      <ComboBox x:Name="IncrementalInterval" Width="120" SelectedIndex="2">
        <ComboBoxItem Content="Off"/>
        <ComboBoxItem Content="12 hours"/>
        <ComboBoxItem Content="24 hours"/>
        <ComboBoxItem Content="36 hours"/>
        <ComboBoxItem Content="48 hours"/>
      </ComboBox>
    </StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,20,0,0">
      <Button Content="Cancel" Classes="secondary" Click="Cancel_OnClick"/>
      <Button Content="Apply" Classes="primary" Click="Apply_OnClick"/>
    </StackPanel>
  </StackPanel>
</Window>
