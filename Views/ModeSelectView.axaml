<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SnapVault.Views.ModeSelectView">
  <StackPanel>
    <TextBlock Text="What would you like to do?" FontSize="18" FontWeight="SemiBold" Foreground="#F0F2F5" Margin="0,0,0,8"/>
    <TextBlock Text="Create a backup or restore from cloud. (Windows: wbAdmin â€¢ Linux/macOS: rsync)" Foreground="#8B9CB3" Margin="0,0,0,28"/>
    <Button x:Name="DashboardButton" Content="ðŸ“‹ View schedule &amp; backup history" IsVisible="False" Margin="0,0,0,8"
            Background="Transparent" Foreground="#8B9CB3" BorderThickness="0" Cursor="Hand" Click="DashboardButton_OnClick"/>
    <Button x:Name="PrepareFullRestoreButton" Content="ðŸ’¾ Prepare full system restore (live media)" IsVisible="False" Margin="0,0,0,16"
            Background="Transparent" Foreground="#8B9CB3" BorderThickness="0" Cursor="Hand" Click="PrepareFullRestore_OnClick"/>
    <Grid ColumnDefinitions="*,24,*">
      <Border Grid.Column="0" Background="#1A2332" CornerRadius="12" Padding="24" Margin="0,8" Cursor="Hand"
              PointerPressed="BackupCard_OnClick">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
          <TextBlock Text="ðŸ“¦ Backup" FontSize="22" FontWeight="Bold" Foreground="#F0F2F5" HorizontalAlignment="Center" Margin="0,0,0,8"/>
          <TextBlock Text="Create a full or incremental backup, schedule it, and optionally upload to cloud." 
                     Foreground="#8B9CB3" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="260" HorizontalAlignment="Center"/>
        </StackPanel>
      </Border>
      <Border Grid.Column="2" Background="#1A2332" CornerRadius="12" Padding="24" Margin="0,8" Cursor="Hand"
              PointerPressed="RestoreCard_OnClick">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
          <TextBlock Text="ðŸ”„ Restore" FontSize="22" FontWeight="Bold" Foreground="#F0F2F5" HorizontalAlignment="Center" Margin="0,0,0,8"/>
          <TextBlock Text="Download a backup from cloud and restore (native recovery on Windows, rsync on Linux/macOS)." 
                     Foreground="#8B9CB3" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="260" HorizontalAlignment="Center"/>
        </StackPanel>
      </Border>
    </Grid>
  </StackPanel>
</UserControl>
