<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SnapVault.Views.RestoreStep1Cloud">
  <StackPanel>
    <TextBlock Text="Cloud storage credentials" FontSize="18" FontWeight="SemiBold" Foreground="#F0F2F5" Margin="0,0,0,8"/>
    <TextBlock Text="Enter the cloud account where your backups were uploaded (Azure or S3)." Foreground="#8B9CB3" Margin="0,0,0,20"/>
    <ComboBox x:Name="ProviderCombo" SelectedIndex="0" Margin="0,0,0,12" SelectionChanged="SyncConfig">
      <ComboBoxItem Content="Azure Blob Storage"/>
      <ComboBoxItem Content="Amazon S3 (or S3-compatible)"/>
    </ComboBox>
    <TextBlock Text="Container (Azure) or Bucket (S3)" Foreground="#8B9CB3" FontSize="12"/>
    <TextBox x:Name="ContainerBucket" Margin="0,4,0,12" Padding="10,8" Background="#0F1419" Foreground="#F0F2F5" LostFocus="SyncConfig"/>
    <TextBlock Text="Account name (Azure) or Access Key ID (S3)" Foreground="#8B9CB3" FontSize="12"/>
    <TextBox x:Name="AccountKeyId" Margin="0,4,0,12" Padding="10,8" Background="#0F1419" Foreground="#F0F2F5" LostFocus="SyncConfig"/>
    <TextBlock Text="Account key (Azure) or Secret Key (S3)" Foreground="#8B9CB3" FontSize="12"/>
    <TextBox x:Name="SecretKey" Margin="0,4,0,12" Padding="10,8" Background="#0F1419" Foreground="#F0F2F5" PasswordChar="â—" LostFocus="SyncConfig"/>
    <TextBlock Text="Region or endpoint (S3 only; optional)" Foreground="#8B9CB3" FontSize="12"/>
    <TextBox x:Name="EndpointRegion" Margin="0,4,0,12" Padding="10,8" Background="#0F1419" Foreground="#F0F2F5" LostFocus="SyncConfig"/>
  </StackPanel>
</UserControl>
