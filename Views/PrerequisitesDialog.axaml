<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SnapVault.Views.PrerequisitesDialog"
        Title="Required software"
        Width="480" Height="320"
        WindowStartupLocation="CenterOwner"
        Background="#0F1419">
  <StackPanel Margin="24" Spacing="16">
    <TextBlock Text="Some required software is missing or not detected. Install it for full functionality." 
               Foreground="#F0F2F5" TextWrapping="Wrap" Margin="0,0,0,8"/>
    <ScrollViewer MaxHeight="160" VerticalScrollBarVisibility="Auto">
      <ItemsControl x:Name="MissingItemsList">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Background="#1A2332" CornerRadius="8" Padding="12" Margin="0,0,0,8">
              <StackPanel Spacing="6">
                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#E8A838"/>
                <TextBlock Text="{Binding Description}" Foreground="#8B9CB3" TextWrapping="Wrap" FontSize="12"/>
                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                  <Button Content="{Binding InstallButtonLabel}" Classes="primary"
                          Click="InstallButton_OnClick" Padding="12,6"/>
                  <Button Content="Open download page" Classes="secondary"
                          Click="OpenUrlButton_OnClick" Padding="12,6"/>
                </StackPanel>
              </StackPanel>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
    <TextBlock x:Name="StatusText" Text="" Foreground="#E8A838" FontSize="12" TextWrapping="Wrap" IsVisible="False" Margin="0,4,0,0"/>
    <TextBlock Text="You can also install manually and restart the app." Foreground="#8B9CB3" FontSize="12"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,8,0,0">
      <Button x:Name="ContinueButton" Content="Continue anyway" Classes="secondary" Click="ContinueButton_OnClick"/>
    </StackPanel>
  </StackPanel>
</Window>
