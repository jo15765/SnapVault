<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style Selector="Border.step-indicator">
    <Setter Property="Width" Value="36"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="CornerRadius" Value="18"/>
    <Setter Property="Background" Value="#1A2332"/>
    <Setter Property="BorderBrush" Value="#E8A838"/>
    <Setter Property="BorderThickness" Value="2"/>
  </Style>
  <Style Selector="Button.primary">
    <Setter Property="Background" Value="#E8A838"/>
    <Setter Property="Foreground" Value="#0F1419"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Padding" Value="24,12"/>
    <Setter Property="CornerRadius" Value="6"/>
  </Style>
  <Style Selector="Button.secondary">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="#E8A838"/>
    <Setter Property="BorderBrush" Value="#E8A838"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="Padding" Value="24,12"/>
    <Setter Property="CornerRadius" Value="6"/>
  </Style>
  <Style Selector="Border.card">
    <Setter Property="Background" Value="#1A2332"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="24"/>
    <Setter Property="Margin" Value="0,8"/>
  </Style>
</Styles>
